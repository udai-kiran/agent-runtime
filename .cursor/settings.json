{
  "enabledPlugins": {
    "ms-python.vscode-pylance": true,
    "ms-python.pyright": true,
    "golang.go": true,
    "rust-lang.rust-analyzer": true,
    "llvm-vs-code-extensions.vscode-clangd": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".cursor/hooks/pre-bash-dangerous.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".cursor/hooks/post-write-python.sh"
          },
          {
            "type": "command",
            "command": ".cursor/hooks/post-write-pytest.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".cursor/hooks/subagent-stop-pytest.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".cursor/hooks/ralph-stop-hook.sh"
          }
        ]
      }
    ]
  }
}
